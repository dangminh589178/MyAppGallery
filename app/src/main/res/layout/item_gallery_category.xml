<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/padding_6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_category"
        style="@style/T16_T16B_700"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="@string/title_image_category" />

    <TextView
        android:id="@+id/tvSeeMore"
        style="@style/T18_T18B_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_see_mote"
        app:layout_constraintBottom_toBottomOf="@+id/title_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_category" />
</androidx.constraintlayout.widget.ConstraintLayout>
